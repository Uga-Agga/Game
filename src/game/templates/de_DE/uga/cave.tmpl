{% extends "base.tmpl" %}
{% block title %}Höhlendetails{% endblock %}
{% block content %}

{% if status_msg %}<div class="{{ status_msg.type }}">{{ status_msg.message|raw }}</div>{% endif %}

{% if cancelOrder_box %}{% include "boxConfirmation.tmpl" %}{% endif %}

<br />
<a href="export.php?modus=thisCave&amp;caveID={{ cave_id }}&amp;format=xml" onclick="return popitup(this.href)"><img src="{{ gfx }}/de_DE/t_uga/icon_export_xml.png" class="noborder" width="30" height="30" alt="Export als XML" title="Export als XML" /></a><br />
<br />

<div class="box">
  <div class="box-header">Höhle <a href="ugastart.php?caveID={{ cave_data.cave_id }}" style="color: #FFFFFF">{{ cave_data.name }}</a> in ({{ cave_data.xCoord }}; {{ cave_data.yCoord }}). Region {{ cave_data.region_name }}. {% if cave_data.properties %}{% for item in cave_data.properties %}<em>({{ item.text }})</em>{% endfor %}{% endif %}</div>
  <div class="box-content success inner nohover">
    <table class="table" cellpadding="3" cellspacing="0" rules="rows">
      {% if resource %}
      <tr>
        <td>
          <ul>
            {% for item in resource %}
            <li style="float: left; padding: 0 5px; text-align: center;"><img src="{{ gfx }}/resources/{{ item.dbFieldName }}_icon.gif" alt="{{ item.name }}" title="{{ item.name }}" /><br />{{ item.value }}</li>
            {% endfor %}
          </ul>
          <div style="clear: both;"></div>
        </td>
      </tr>
      {% endif %}
      {% if units %}
      <tr>
        <td>
          <ul>
            {% for item in units %}
            <li style="float: left; padding: 0 5px; text-align: center;"><img src="{{ gfx }}/units/{{ item.dbFieldName }}_small.gif" width="40px" height="50px" alt="{{ item.name }}" title="{{ item.name }}" /><br/>{{ item.value }}</li>
            {% endfor %}
          </ul>
          <div style="clear: both;"></div>
        </td>
      </tr>
      {% endif %}
      {% if buildings %}
      <tr>
        <td>
          <ul>
            {% for item in buildings %}
            <li style="float: left; padding: 0 5px; text-align: center;"><img src="{{ gfx }}/buildings/{{ item.dbFieldName }}_small.gif" width="40px" height="50px" alt="{{ item.name }}" title="{{ item.name }}" /><br />{{ item.value }}</li>
            {% endfor %}
          </ul>
          <div style="clear: both;"></div>
        </td>
      </tr>
      {% endif %}
      {% if defense %}
      <tr>
        <td>
          <ul>
            {% for item in defense %}
            <li style="float: left; padding: 0 5px; text-align: center;"><img src="{{ gfx }}/externals/{{ item.dbFieldName }}_small.gif" width="40px" height="50px" alt="{{ item.name }}" title="{{ item.name }}" /><br />{{ item.value }}</li>
            {% endfor %}
          </ul>
          <div style="clear: both;"></div>
        </td>
      </tr>
      {% endif %}
    </table>
  </div>
</div>

{% if give_up %}
<form method="post" action="main.php?modus={{ cave_detail_link }}&amp;action=caveGiveUp">
  <p><input type="hidden" name="giveUpCaveID" value="{{ cave_data.cave_id }}" /></p>
  <p><input type="submit" value="Höhle {{ cave_data.name }} aufgeben" /></p>
</form>
{% endif %}
{% if unprotected %}
<form method="post" action="main.php?modus={{ cave_detail_link }}&amp;action=endProtection">
  <p><input type="submit" value="Anfängerschutz vorzeitig beenden." /></p>
</form>
{% endif %}

{% endblock %}