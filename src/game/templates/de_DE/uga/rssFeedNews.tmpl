{% extends "base.tmpl" %}
{% block title %}News{% endblock %}
{% block content %}

{% if rssFeeds %}
  {% for item in rssFeeds %}
    <div class="info text-left">
      <h3 class="loud"><a href="{{ item.link }}">{{ item.title }}</a></h3>
      {{ item.description|raw }}
    </div>
  {% endfor %}
{% else %}
  <div class="error">Zur Zeit gibt es leider keine News.</div>
{% endif %}

{% endblock %}